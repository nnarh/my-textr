<%= form_for :session, url: session_path do |form| %>
  <div>
    <%= form.telephone_field :phone, placeholder: "Phone" %>
  </div>
  <div>
    <%= form.password_field :password, placeholder: "Password" %>
  </div>
  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>


<%= form_for @user do |form| %>
  <div>
    <%= form.email_field :email, placeholder: "Email" %>
  </div>
  <div>
    <%= form.telephone_field :phone, placeholder: "Phone Number" %>
  <div>
    <%= form.password_field :password, placeholder: "Password" %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
